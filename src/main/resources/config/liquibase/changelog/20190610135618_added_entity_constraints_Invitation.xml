<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Invitation.
    -->
    <changeSet id="20190610135618-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="event_id"
                                 baseTableName="invitation"
                                 constraintName="fk_invitation_event_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event"/>

        <addForeignKeyConstraint baseColumnNames="guest_id"
                                 baseTableName="invitation"
                                 constraintName="fk_invitation_guest_id"
                                 referencedColumnNames="id"
                                 referencedTableName="guest"/>

    </changeSet>
</databaseChangeLog>
